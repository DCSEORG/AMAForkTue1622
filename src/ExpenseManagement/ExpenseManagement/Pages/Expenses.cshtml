@page
@model ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">üìã Expenses</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <form method="get" class="d-flex">
                        <input type="text" class="form-control me-2" name="filter" placeholder="Filter expenses..." 
                               value="@Model.Filter" />
                        <button type="submit" class="btn btn-primary">Filter</button>
                        @if (!string.IsNullOrWhiteSpace(Model.Filter))
                        {
                            <a href="/Expenses" class="btn btn-outline-secondary ms-2">Clear</a>
                        }
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/AddExpense" class="btn btn-success">+ Add New Expense</a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Expenses.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    No expenses found. <a href="/AddExpense">Add your first expense</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var expense in Model.Expenses)
                            {
                                <tr>
                                    <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@expense.CategoryName</td>
                                    <td class="text-end">¬£@expense.AmountGBP.ToString("N2")</td>
                                    <td>
                                        @if (expense.StatusName == "Approved")
                                        {
                                            <span class="badge bg-success">‚úÖ @expense.StatusName</span>
                                        }
                                        else if (expense.StatusName == "Submitted")
                                        {
                                            <span class="badge bg-warning text-dark">‚è≥ @expense.StatusName</span>
                                        }
                                        else if (expense.StatusName == "Rejected")
                                        {
                                            <span class="badge bg-danger">‚ùå @expense.StatusName</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">üìù @expense.StatusName</span>
                                        }
                                    </td>
                                    <td>@(expense.Description ?? "-")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Expenses.Count > 0)
            {
                <div class="mt-3">
                    <p class="text-muted">
                        Total expenses: @Model.Expenses.Count | 
                        Total amount: ¬£@Model.Expenses.Sum(e => e.AmountGBP).ToString("N2")
                    </p>
                </div>
            }
        </div>
    </div>
</div>
